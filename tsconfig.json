{
    "compilerOptions": {
        "rootDir": ".",
        "outDir": "_build",
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "newLine": "lf",
        "stripInternal": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "sourceMap": true
    },
    "exclude": [
        ".*",
        "_*",
        "node_modules"
    ]
}